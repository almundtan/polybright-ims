{
  "name": "@polybright/ims-api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:api": "vitest run tests/api.test.ts",
    "test:e2e": "echo 'E2E covered at root'",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "generate": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.4.4",
    "morgan": "^1.10.0",
    "pino": "^8.15.0",
    "pino-http": "^8.6.1",
    "uuid": "^9.0.1",
    "zod": "^3.23.8",
    "@node-rs/argon2": "^1.7.0",
    "argon2": "^0.41.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.13.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0",
    "vitest": "^1.5.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
