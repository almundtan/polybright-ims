{
  "name": "polybright-ims",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "apps/api",
    "apps/web",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "fmt": "prettier --write .",
    "lint": "npm-run-all lint:api lint:web",
    "lint:api": "npm run lint --workspace apps/api",
    "lint:web": "npm run lint --workspace apps/web",
    "typecheck": "npm-run-all typecheck:api typecheck:web",
    "typecheck:api": "npm run typecheck --workspace apps/api",
    "typecheck:web": "npm run typecheck --workspace apps/web",
    "dev": "npm-run-all -p dev:api dev:web",
    "dev:api": "npm run dev --workspace apps/api",
    "dev:web": "npm run dev --workspace apps/web",
    "dev:mobile": "npm run start --workspace apps/mobile",
    "build": "npm run build --workspace apps/web",
    "build:web": "npm run build --workspace apps/web",
    "migrate": "npm run migrate --workspace apps/api",
    "db:seed": "npm run db:seed --workspace apps/api",
    "test": "npm-run-all test:unit test:api test:e2e",
    "test:unit": "npm run test --workspace apps/api",
    "test:api": "npm run test:api --workspace apps/api",
    "test:e2e": "playwright test",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up --build"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@types/node": "^20.14.2",
    "concurrently": "^9.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.6.0"
  },
  "overrides": {
    "esbuild": "0.25.10"
  }
}
